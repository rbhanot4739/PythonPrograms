" Ensure the file doesn't have leading whitespaces

set gdefault                      " substitute all occurrences in line per default
set history=10000                  " keep x lines of command line history
set hlsearch                      " highlight search occurrences
set ignorecase                    " ignore case in search patterns
set smartcase                     " no ignore case when pattern is uppercase
set smartjoin                     "join lines by removing spaces"
set incsearch                     " show search results while typing
set relativenumber
set wrapscan                      " searches wrap around the end of the file
set number                        " line numbers
set scrolloff=5 sidescrolloff=10  " keep some lines before and after the cursor visible
set clipboard=unnamedplus,unnamed " integrate with system clipboard

" Ideavim Plugins
set surround
set commentary

let mapleader=" "

" Navigate properly when lines are wrapped
nnoremap j gj
nnoremap k gk

nnoremap L g_
nnoremap H _
nnoremap Y y$

inoremap <c-s> <ESC>:w<CR>a
" For seamless jumping b/w tags
" c-] takes you the tag under the cursor, so c-[ to come back
" nnoremap <c-[> <c-t>

nnoremap ,o o<ESC>xk
nnoremap ,O O<ESC>xj

" Keep a block highlighted while shifting
vnoremap < <gv
vnoremap > >gv
vnoremap = =gv

" Bind <Space>h to remove highlight of your last search
nnoremap <leader>h :nohl<CR>
vnoremap <leader>h :nohl<CR>

"--- Copy/Paste to system register
nnoremap <Leader>y "*yy
nnoremap <Leader>p "*p

noremap <c-j> <c-w>j
noremap <c-k> <c-w>k
noremap <c-l> <c-w>l
noremap <c-h> <c-w>h
nmap <silent> <Esc> :nohl<CR>

:command W w
:command Q q
:command WQ wq

"Pycharm specific stuff
" see all actions with :actionlist
"Move tabs down and right/ Create splits
nnoremap <a--> :action MoveTabDown<CR>
nnoremap <a-\> :action MoveTabRight<CR>
nnoremap <a-=> :action Unsplit<CR>
inoremap <a--> <ESC>:action MoveTabDown<CR>
inoremap <a-\> <ESC>:action MoveTabRight<CR>
inoremap <a-=> <ESC>:action Unsplit<CR>
nnoremap ,, :action ReformatCode<CR>
nnoremap <leader>ff  :action Find<CR>
nnoremap <leader>fr  :action Replace<CR>
" nnoremap <leader>fp :action FindInPath<cr>
" nnoremap <leader>rp :action ReplaceInPath<cr>
nnoremap <leader>fu :action FindUsages<cr>
nnoremap <leader>su :action ShowUsages<cr>
nnoremap <leader>re :action RenameElement<cr>
nnoremap <leader>rf :action RenameFile<cr>

" nnoremap <leader>bb :action ToggleLineBreakpoint<cr>
" nnoremap <leader>br :action ViewBreakpoints<cr>
" nnoremap <leader>dd :action Debug<cr>
nnoremap <leader>rr :action Run<cr>

nnoremap <leader>gi :action GotoImplementation<cr>
nnoremap <leader>gd :action GotoDeclaration<cr>
nnoremap <leader>gf :action GotoFile<cr>

nnoremap + :action EditorIncreaseFontSize<CR>
nnoremap - :action EditorDecreaseFontSize<CR>
nnoremap = :action EditorResetFontSize<CR>


nnoremap <leader>, :action CloseEditor<CR>
" nnoremap <leader>qq :action CloseAllEditors<CR>
